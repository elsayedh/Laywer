<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard of reopen button -->
    <record id="wiz_reopen_button_form" model="ir.ui.view" >
        <field name="name">wiz.reopen.button.form</field>
        <field name="model">matter.reopen.wizard</field>
        <field name="arch" type="xml">
            <form string="Re-Open">
                <sheet>
                    <group colspan="6" cols="6">
                        <group>
                            <field name="reopen_date" required="1"/>
                        </group>
                    </group>
                    <group>
                        <field name="reason" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="wiz_reason_action" string="Re-Open" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

