<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard of working Hour -->
    <record id="wiz_work_hour_form" model="ir.ui.view" >
        <field name="name">wiz.work.hour.form</field>
        <field name="model">matter.work.hour</field>
        <field name="arch" type="xml">
            <form string="Working Hour">
                <sheet>
                    <group>
                        <field name="work_hour" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="wiz_work_hour" string="Create Invoice"
                        type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"
                        class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

