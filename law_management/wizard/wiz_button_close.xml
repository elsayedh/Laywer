<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Wizard of close button -->
    <record id="wiz_close_button_form" model="ir.ui.view" >
        <field name="name">wiz.close.button.form</field>
        <field name="model">matter.close.wizard</field>
        <field name="arch" type="xml">
            <form string="Trial">
                <sheet>
                    <group>
                        <group cols="4">
                            <field name="date" required="1"/>
                        </group>
                        <group cols="4">
                            <field name="act_type" required="1"/>
                        </group>
                    </group>
                    <group string="comments">
                        <field name="descript" required="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="wiz_close_action" string="Close" type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

