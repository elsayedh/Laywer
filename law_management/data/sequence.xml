<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence of the matter -->
        <record id="matter_seq" model="ir.sequence">
            <field name="name">Matter Sequence</field>
            <field name="code">matter.matter</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="padding">5</field>
            <field name="prefix">MATTER/%(year)s/</field>
        </record>

        <!-- Sequence of the lawyer -->
        <record id="lawyer_seq" model="ir.sequence">
            <field name="name">Lawyer Sequence</field>
            <field name="code">hr.employee</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="padding">5</field>
            <field name="prefix">LAWYER/%(year)s/</field>
        </record>

        <!-- Sequence of the evidence -->
        <record id="mat_evidence_seq" model="ir.sequence">
            <field name="name">Evidence Sequence</field>
            <field name="code">matter.evidence</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="padding">5</field>
            <field name="prefix">EVIDENCE/%(year)s/</field>
        </record>

        <!-- Sequence of Client -->
        <record id="client_seq" model="ir.sequence">
            <field name="name">Client Sequence</field>
            <field name="code">client.number</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="padding">5</field>
            <field name="prefix">CLIENT/</field>
        </record>

        <!-- Sequence of the Trial -->
        <record id="trial_seq" model="ir.sequence">
            <field name="name">Trial Sequence</field>
            <field name="code">matter.trial</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="padding">5</field>
            <field name="prefix">TRIAL/%(year)s/</field>
        </record>
    </data>
</odoo>
